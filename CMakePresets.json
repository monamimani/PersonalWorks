{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/_Out/build/${presetName}",
      "installDir": "${sourceDir}/_Out/install/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "YES"
      }
    },
    {
      "name": "checkers",
      "hidden": true,
      "cacheVariables": {
        "USE_ASAN": false,
        "ENABLE_CPPCHECK_DEFAULT": true,
        "ENABLE_CLANG_TIDY_DEFAULT": true//,
        //"ENABLE_CPPCHECK": true,
        //"ENABLE_CLANG_TIDY":  true
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "enableClangTidyCodeAnalysis": true,
          "enableMicrosoftCodeAnalysis": true
        }
      }
    },
    {
      "name": "Windows-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CXX_FLAGS": "/DWIN32 /D_WINDOWS /W4 /EHsc /MP /permissive-",
        "CMAKE_C_FLAGS": "/DWIN32 /D_WINDOWS /W4 /EHsc /MP /permissive-",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc-11",
        "CMAKE_CXX_COMPILER": "g++-11",
        "ENABLE_CPPCHECK_DEFAULT": "FALSE",
        "CMAKE_CXX_FLAGS": "-Wpedantic -Wall -Wextra",
        "CMAKE_C_FLAGS": "-Wpedantic -Wall -Wextra",
        "ENABLE_CLANG_TIDY_DEFAULT": "FALSE",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Linux" ],
          "intelliSenseMode": "linux-gcc-x64"
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "Vs2022",
      "hidden": true,
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "ninja-multi-config",
      "hidden": true,
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "ninja",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "windows-vs2022",
      "inherits": [ "base", "Windows-base", "Vs2022" ]
    },
    {
      "name": "windows-ninja-multi-config",
      "inherits": [ "base", "Windows-base", "ninja-multi-config" ]
    },
    {
      "name": "windows-ninja",
      "inherits": [ "base", "Windows-base", "ninja" ]
    },
    {
      "name": "windows-vs2022-checkers",
      "inherits": [ "base", "checkers", "Windows-base", "Vs2022" ]
    },
    {
      "name": "windows-ninja-multi-config-checkers",
      "inherits": [ "base", "checkers", "Windows-base", "ninja-multi-config" ]
    },
    {
      "name": "windows-ninja-checkers",
      "inherits": [ "base", "checkers", "Windows-base", "ninja" ]
    },
    {
      "name": "linux-ninja-multi-config",
      "inherits": [ "base", "linux-base", "ninja-multi-config" ]
    },
    {
      "name": "linux-ninja",
      "inherits": [ "base", "linux-base", "ninja" ]
    }
    // {
    //   "name": "x64-debug",
    //   "displayName": "Vs2022",
    //   "description": "Target Windows (64-bit) with the Visual Studio development environment. (Debug)",
    //   "inherits": ["base", "Windows-base", "Vs2022"],
    //   "cacheVariables": {
    //     "CMAKE_BUILD_TYPE": "Debug"
    //   }
    // },
    // {
    //   "name": "x64-release",
    //   "displayName": "x64 Release",
    //   "description": "Target Windows (64-bit) with the Visual Studio development environment. (RelWithDebInfo)",
    //   "inherits": "x64-debug",
    //   "cacheVariables": {
    //     "CMAKE_BUILD_TYPE": "RelWithDebInfo"
    //   }
    // },
    // {
    //   "name": "x64-shipping",
    //   "displayName": "x64 Shipping",
    //   "description": "Target Windows (64-bit) with the Visual Studio development environment. (Release)",
    //   "inherits": "x64-release",
    //   "cacheVariables": {
    //     "CMAKE_BUILD_TYPE": "Release"
    //   }
    // }
  ],
  "buildPresets": [
    {
      "name": "windows-vs2022-x64-debug",
      "configurePreset": "windows-vs2022",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs2022-x64-release",
      "configurePreset": "windows-vs2022",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-vs2022-x64-shipping",
      "configurePreset": "windows-vs2022",
      "configuration": "Release"
    },
    {
      "name": "windows-vs2022-x64-checkers-debug",
      "configurePreset": "windows-vs2022-checkers",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs2022-x64-checkers-release",
      "configurePreset": "windows-vs2022-checkers",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-vs2022-x64-checkers-shipping",
      "configurePreset": "windows-vs2022-checkers",
      "configuration": "Release"
    },
    {
      "name": "linux-ninja-multi-config-x64-debug",
      "configurePreset": "linux-ninja-multi-config",
      "configuration": "Debug"
    },
    {
      "name": "linux-ninja-multi-config-x64-release",
      "configurePreset": "linux-ninja-multi-config",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "linux-ninja-multi-config-x64-shipping",
      "configurePreset": "linux-ninja-multi-config",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "output": {
        "outputOnFailure": true,
        "outputLogFile": "Ctest-${presetName}.log"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "windows-vs2022-x64-debug",
      "inherits": "test-base",
      "configurePreset": "windows-vs2022",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs2022-x64-release",
      "inherits": "test-base",
      "configurePreset": "windows-vs2022",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-vs2022-x64-shipping",
      "inherits": "test-base",
      "configurePreset": "windows-vs2022",
      "configuration": "Release"
    },
    {
      "name": "linux-ninja-multi-config-x64-debug",
      "inherits": "test-base",
      "configurePreset": "linux-ninja-multi-config",
      "configuration": "Debug"
    },
    {
      "name": "linux-ninja-multi-config-x64-release",
      "inherits": "test-base",
      "configurePreset": "linux-ninja-multi-config",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "linux-ninja-multi-config-x64-shipping",
      "inherits": "test-base",
      "configurePreset": "linux-ninja-multi-config",
      "configuration": "Release"
    }

  ]
}
