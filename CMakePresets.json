{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26,
    "patch": 0
  },
  "include": [
    "CMakePresets/Generators.json",
    "CMakePresets/Toolchain.json"
  ],
  "configurePresets": [
    {
      "name": "Common",
      "hidden": true,
      "binaryDir": "${sourceDir}/_Out/build/${presetName}",
      "installDir": "${sourceDir}/_Out/install/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "YES"
      }
    },
    {
      "name": "checkers",
      "hidden": true,
      "cacheVariables": {
        "USE_ASAN": false,
        "ENABLE_CPPCHECK": true,
        "ENABLE_CLANG_TIDY": true
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "enableClangTidyCodeAnalysis": true,
          "enableMicrosoftCodeAnalysis": true,
          "codeAnalysisRuleset": "AllRules.ruleset"
        }
      }
    },
    {
      "name": "Windows",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "Linux",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Linux" ],
          "intelliSenseMode": "linux-gcc-x64"
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "windows-vs2022",
      "inherits": [ "Common", "Windows", "Cl", "Vs2022" ]
    },
    {
      "name": "windows-vs2022-checkers",
      "inherits": [ "Common", "checkers", "Windows", "Cl", "Vs2022" ]
    },
    {
      "name": "windows-ninja-x64-debug",
      "inherits": [ "Common", "Windows", "Cl", "ninja" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-ninja-x64-relwithdebinfo",
      "inherits": [ "Common", "Windows", "Cl", "ninja" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "windows-ninja-x64-release",
      "inherits": [ "Common", "Windows", "Cl", "ninja" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-ninja-checkers-x64-debug",
      "inherits": [ "Common", "checkers", "Windows", "Cl", "ninja" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-ninja-checkers-x64-relwithdebinfo",
      "inherits": [ "Common", "checkers", "Windows", "Cl", "ninja" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "windows-ninja-checkers-x64-release",
      "inherits": [ "Common", "checkers", "Windows", "Cl", "ninja" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-ninja-x64-debug",
      "inherits": [ "Common", "Linux", "Gcc", "ninja" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-ninja-x64-release",
      "inherits": [ "Common", "Linux", "Gcc", "ninja" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "linux-ninja-x64-shipping",
      "inherits": [ "Common", "Linux", "Gcc", "ninja" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-vs2022-x64-debug",
      "configurePreset": "windows-vs2022",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs2022-x64-release",
      "configurePreset": "windows-vs2022",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-vs2022-x64-shipping",
      "configurePreset": "windows-vs2022",
      "configuration": "Release"
    },
    {
      "name": "windows-vs2022-x64-checkers-debug",
      "configurePreset": "windows-vs2022-checkers",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs2022-x64-checkers-release",
      "configurePreset": "windows-vs2022-checkers",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-vs2022-x64-checkers-shipping",
      "configurePreset": "windows-vs2022-checkers",
      "configuration": "Release"
    }
