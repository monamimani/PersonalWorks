  ],
  "buildPresets": [
    {
     "name": "windows-vs2022-x64-debug",
     "configurePreset": "windows-vs2022",
     "configuration": "Debug"
    },
    {
     "name": "windows-vs2022-x64-release",
     "configurePreset": "windows-vs2022",
     "configuration": "RelWithDebInfo"
    },
    {
     "name": "windows-vs2022-x64-shipping",
     "configurePreset": "windows-vs2022",
     "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "test-base",
      "description": "Test CMake settings that apply to all configurations",
      "hidden": true,
      "output": {
        "outputOnFailure": true,
        "outputLogFile": "Ctest-${presetName}.log"
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "windows-vs2022-x64-debug",
      "inherits": "test-base",
      "configurePreset": "windows-vs2022",
      "configuration": "Debug"
    },
    {
      "name": "windows-vs2022-x64-release",
      "inherits": "test-base",
      "configurePreset": "windows-vs2022",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-vs2022-x64-shipping",
      "inherits": "test-base",
      "configurePreset": "windows-vs2022",
      "configuration": "Release"
    }
  ]
