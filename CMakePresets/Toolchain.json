    {
      "name": "Gcc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc-11",
        "CMAKE_CXX_COMPILER": "g++-11",
        "CMAKE_CXX_FLAGS": "-Wpedantic -Wall -Wextra",
        "CMAKE_C_FLAGS": "-Wpedantic -Wall -Wextra"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ]
